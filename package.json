{
  "name": "@mizdra/inline-fixture-files",
  "description": "The utility for writing fixture files inline.",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "repository": "https://github.com/mizdra/inline-fs-fixtures.git",
  "author": "mizdra <pp.mizdra@gmail.com>",
  "license": "MIT",
  "private": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "scripts": {
    "prebuild": "node -e 'require(\"fs\").rmSync(\"./dist\", { recursive: true, force: true })'",
    "build": "tsc -p tsconfig.build.json",
    "lint": "run-s -c lint:*",
    "lint:tsc": "tsc",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "test": "vitest",
    "update-api-docs": "npm run build && api-extractor run --local --verbose && api-documenter markdown -i ./temp -o ./docs/api"
  },
  "prettier": "@mizdra/prettier-config-mizdra",
  "devDependencies": {
    "@microsoft/api-documenter": "^7.22.21",
    "@microsoft/api-extractor": "^7.36.0",
    "@mizdra/eslint-config-mizdra": "^2.0.0",
    "@mizdra/prettier-config-mizdra": "^1.0.0",
    "@tsconfig/node18": "^2.0.1",
    "@tsconfig/strictest": "^2.0.1",
    "@types/dedent": "^0.7.0",
    "@types/eslint": "^8.40.0",
    "@types/node": "^20.2.5",
    "dedent": "^0.7.0",
    "eslint": "^8.41.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.0",
    "ts-expect": "^1.3.0",
    "typescript": "^5.1.6",
    "vitest": "^0.33.0",
    "vitest-github-actions-reporter": "^0.10.0"
  },
  "overrides": {
    "tsconfig-paths": "^4.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "keywords": [
    "fixture",
    "test",
    "file-system"
  ],
  "files": [
    "bin",
    "src",
    "!src/**/*.test.ts",
    "!src/**/__snapshots__",
    "dist"
  ]
}
